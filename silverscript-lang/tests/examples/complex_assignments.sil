contract ComplexAssignments(int limit){
    function main(int n){
        require(n >= 0);
        require(n <= limit);
        int a = 0;
        int b = 0;
        int c = 0;
        int d = 0;
        int e = 0;
        int f = 0;
        int g = 0;
        int h = 0;

        for(i,1,limit+1){
            d = d + 1;
            if(i <= n){
                a = a + i;
                e = e + 2;
                if(i % 2 == 0){
                    h = h + i;
                }
            } else {
                c = c + i;
                g = g + 1;
            }
            if(i % 2 == 0){
                b = b + i;
            } else {
                b = b - 1;
            }
            if(i == 1){
                f = 7;
            } else {
                f = f + 1;
            }
        }

        int total = limit * (limit + 1) / 2;
        int expected_a = n * (n + 1) / 2;
        int expected_c = total - expected_a;
        int expected_e = n * 2;
        int expected_g = limit - n;
        int m = limit / 2;
        int expected_b = m * (m + 1) - (limit - m);
        int hn = n / 2;
        int expected_h = hn * (hn + 1);
        int expected_f = limit + 6;

        require(a == expected_a);
        require(b == expected_b);
        require(c == expected_c);
        require(d == limit);
        require(e == expected_e);
        require(f == expected_f);
        require(g == expected_g);
        require(h == expected_h);
    }
}
