pragma silverscript ^0.1.0;

contract Covenant() {
    entrypoint function spend() {
        require(tx.version == 2);
        require(tx.locktime == 0);
        require(tx.inputs.length == 1);
        require(tx.outputs.length == 1);
        require(this.activeInputIndex == 0);
        require(this.activeScriptPubKey.length == 300);
        require(tx.inputs[0].value == 10000);
        require(tx.inputs[0].scriptPubKey.length == 10000);
        require(tx.outputs[0].value == 10000);
        require(tx.outputs[0].scriptPubKey.length == 100);
    }
}
