pragma silverscript ^0.1.0;

contract Sum() {
    int constant MAX_ARRAY_SIZE = 5;

    function sumArray(int[] arr) : (int) {
        require(arr.length <= MAX_ARRAY_SIZE);
        int sum = 0;
        for (i, 0, MAX_ARRAY_SIZE) {
            if (i < arr.length) {
                sum = sum + arr[i];
            }
        }
        return(sum);
    }

    function main() {
        int[] x;
        x.push(1);
        x.push(2);
        x.push(3);
        (int total) = sumArray(x);
        require(total == 6);
    }
}
