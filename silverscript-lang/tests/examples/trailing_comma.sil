pragma silverscript ^0.1.0;

contract Contract(
    pubkey ownerPk,
    pubkey oraclePk,
) {
    entrypoint function spend(
        sig ownerSig,
        datasig oracleMsgSig,
        sig oracleTxSig,
    ) {
        bytes oracleMessage = byte[]('Spend') + byte[](12, 10,);
        require(checkDataSig(
            oracleMsgSig,
            oracleMessage,
            oraclePk,
        ));
        require(checkMultiSig([
            ownerSig,
            oracleTxSig,
        ], [
            ownerPk,
            oraclePk,
        ]));
    }
}
